          <ul class="nav navbar-nav">
            <li style = "font-size:27px; font-weight:bold;"> <%= link_to 'Peer Allies', peer_allies_path %></li>
            <li class="ally_list"><a <%= link_to 'Allies', ally_list_path %></a></li>
            <li class="calendar"><a <%= link_to 'Calendar', calendar_path %></a></li>
            <li class="information"><%= link_to 'Crisis Information', :crisis_info%></li>
