          </ul>
          
          <div class = "Peer Ally Login">
            <ul class="nav navbar-nav navbar-right">
              <% if(@current_user) %>
              <li class - "login"><a <%= link_to('Log Out', logout_path) %></a></li>
              <% else %>
              <li class='navbar-right'><%= link_to('Log In','/auth/shibboleth') %></li>
              <% end %>
            </ul>
          </div>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <% if flash[:notice] %>
    <banner class="notice"><font color = "red", style="font-weight:bold", font size="6"><%= flash[:notice] %></font></banner>
    <% end %>
    <%= yield %>

  </body>
